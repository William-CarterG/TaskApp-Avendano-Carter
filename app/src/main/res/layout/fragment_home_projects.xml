<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context=".ui.HomeProjectsFragment">

    <TextView
        android:id="@+id/homeProjectsTextView"
        android:layout_width="411dp"
        android:layout_height="106dp"
        android:background="#A6A6A6"
        android:gravity="center"
        android:padding="20sp"
        android:text="@string/home_projects"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/projectSearch"
        android:layout_width="349dp"
        android:layout_height="50dp"
        android:layout_marginTop="108dp"
        android:background="#F3F3F3"
        android:backgroundTint="#ECECEC"
        android:iconifiedByDefault="false"
        android:queryHint="Search..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </SearchView>

    <TextView
        android:id="@+id/editProject1"
        android:layout_width="404dp"
        android:layout_height="57dp"
        android:layout_marginTop="228dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/Project1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editProject2"
        android:layout_width="404dp"
        android:layout_height="57dp"
        android:layout_marginTop="284dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/Project2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editProject3"
        android:layout_width="404dp"
        android:layout_height="57dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/Project3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/AddNewProjectButton"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginTop="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add" />

</androidx.constraintlayout.widget.ConstraintLayout>